// https://scotch.io/tutorials/linting-and-formatting-with-eslint-in-vs-code
{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "linebreak-style": 0,    // ignore windows linebreak
        "no-console": "off"      // ignore console
    }
}
